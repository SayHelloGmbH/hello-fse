{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "sht/menu-toggle",
	"title": "Menu toggler",
	"description": "Adds a clickable button which opens/closes the mobile menu.",
	"category": "theme",
	"icon": "title",
	"keywords": ["title"],
	"textdomain": "sht",
	"supports": {
		"align": ["wide", "full"],
		"multiple": false,
		"color": { "text": true, "background": false, "link": false }
	},
	"attributes": {
		"target": {
			"type": "string"
		},
		"textColor": {
			"type": "string"
		}
	},
	"editorScript": "file:./assets/dist/scripts/editor.js",
	"script": "file:./assets/dist/scripts/view.js",
	"style": ["file:./assets/dist/styles/view/index.min.css"],
	"render": "file:./render.php"
}
